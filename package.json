{
  "name": "template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prepush": "yarn compile && yarn lint && yarn format && yarn check-prettier",
    "compile": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src --ext ts --cache",
    "format": "prettier --write src/",
    "check-prettier": "yarn prettier --check src/",
    "build": "esbuild --bundle --minify --outfile=dist/index.js src/index.ts",
    "build:debug": "esbuild --bundle --outfile=dist/index.js src/index.ts"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "esbuild": "^0.15.14",
    "eslint": "^8.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "gts": "^3.1.1",
    "prettier": "^2.7.1",
    "prettier-plugin-sort-imports": "^1.7.1",
    "typescript": "^4.9.3"
  }
}
